{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:react/recommended",
        "standard"
    ],
    "overrides": [
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "no-restricted-imports": [
            "error",
            {
              "paths": [
                {
                  "name": "react-native-gesture-handler",
                  "importNames": [
                    "TouchableOpacity",
                    "TouchableNativeFeedback",
                    "TouchableHighlight",
                    "TouchableWithoutFeedback"
                  ],
                  "message": "Please import it from 'react-native' instead."
                }
              ]
            }
          ]
    }
}
